{
    "name": "florence/potato",
    "description": "Potato ORM is a simple agnostic ORM that can perform the basic crud database operations",
    "license": "MIT",
    "authors": [
        {
            "name": "andela-fokosun",
            "email": "okosunuzflorence@gmail.com",
            "role": "Developer"
        }
    ],

    "require":
    {
        "pugx/badge-poser": "^2.2",
        "vlucas/phpdotenv": "^2.0",
        "mockery/mockery": "^0.9.4",
        "phpunit/phpunit": "^5.0"
    },

     "autoload":
     {
        "psr-4":
        {
            "Florence\\" : "src/"
        },

        "classmap": ["src/"]
    },

    "autoload-dev": {
        "psr-4": {
            "Florence\\Test\\": "tests/"
        },
        "classmap": ["tests/"]
    }
}
